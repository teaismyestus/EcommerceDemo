@model  ApplicationUser
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="row">
    <div class="col-md-8">

        <table class="table table-hover table-sm">
            <tr>
                <th>İsim:</th>
                <td>@Model.FirstName</td>


            </tr>
            <tr>
                <th>Soyisim:</th>
                <td>@Model.LastName</td>


            </tr>
            <tr>
                <th>Email:</th>
                <td>@Model.Email</td>


            </tr>
            <tr>
                <th>Telefon:</th>
                <td>@Model.PhoneNumber</td>


            </tr>





        </table>


    </div>

    <div class="cold-md-4">

        <img src="~/img/@Model.PictureUrl" alt="@Model.FirstName" class="w-50 img-fluid img-thumbnail" />

    </div>


</div>

