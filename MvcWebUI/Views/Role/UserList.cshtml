@model List<ApplicationUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<table class="table table-sm table-hover">
    <tr>
        <td>Kullanıcı Adı</td>
        <td>Rol</td>
        <td>İşlem</td>
    </tr>
    @if (Model.Count > 0)
    {

        @foreach (var item in Model)
        {
            <tr>

                <td>@item.UserName</td>
                <td>
                    <RolGoster user-id="@item.Id"></RolGoster>
                </td>
                <td>
                    <a asp-action="AssignRole" asp-route-id="@item.Id" class="btn btn-info btn-sm">Rol Ata</a>
                    
                </td>
            </tr>


        }


    }
    else
    {
        <tr>

            <td>Sistemde kayıtlı bir rol bulunmamaktadır.</td>
        </tr>


    }




</table>
