@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<a asp-action="AddRole" asp-controller="Role" class="btn btn-info btn-sm my-2">Yeni Rol Ekle</a>
<table class="table table-sm table-hover">
    <tr>
        <td>Ad</td>
        <td>İşlem</td>
    </tr>
    @if (Model.Count > 0)
    {

        @foreach (var item in Model)
        {
            <tr>

                <td>@item.Name</td>
                <td>
                    <a asp-action="UpdateRole"asp-route-id="@item.Id" class="btn btn-info btn-sm">Güncelle</a>
                    <a asp-action="DeleteRole" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>


        }


    }
    else
    {
        <tr>

            <td>Sistemde kayıtlı bir rol bulunmamaktadır.</td>
        </tr>


    }




</table>

