
@model ProductListViewModel
@{
    ViewData["Title"] = "Product";
    Layout = "~/Views/Shared/_ProductListContent.cshtml";
}

<link rel="stylesheet" href="~/css/productdetail.css" />

<br />


<div class="container">


    




    @if (Model.Products.Count() > 0)
    {
<div class="row px-sm-2 px-0 pt-3">
    @foreach (var product in Model.Products)
    {
        <div class="col-md-4 offset-md-0 offset-sm-2 offset-1 col-sm-8 col-10 offset-sm-2 offset-1 mb-3">
            <div class="card">
                
                <div class="d-flex justify-content-center"> <img src="~/img/@product.PictureUrl" class="product" id="productimg" alt="@product.ProductName"> </div> <b class="px-2">
                    <p class="h4">@product.ProductName</p>
                </b>
                <div class="d-flex align-items-center justify-content-start rating border-top border-bottom py-2">
                    
                    
                </div>
                <div class="d-flex align-items-center justify-content-between py-2 px-3">
                    <div class="h4">@product.UnitPrice.ToString("c");</div>
                    <div> <a class="btn btn-sm btn-success" asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.ProductID">Sepete Ekle</a> </div>
                    <div> <a class="btn btn-sm btn-info" asp-controller="ProductDetail" asp-action="Index" asp-route-productId="@product.ProductID">Detay</a></div>
                </div>
            </div>
        </div>

    }
</div>

    }

    @if (Model.Products.Count() < 0)

    {

        <p>Listede ürün bulunamadı.</p>

    }





</div>





