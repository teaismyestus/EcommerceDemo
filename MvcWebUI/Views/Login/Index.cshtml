@model UserSignInViewModel

@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_ProductDetailContent.cshtml";
}


<br />
<br />
<br />


<h2 class="text-info text-center lead">Giriş Yap</h2>




<form method="post" id="UserForm" class="w-50 mx-auto p-4 mt-3 shadow " asp-action="SignIn">

    <div class="form-group">
        <label asp-for="UserName"></label>
        <span asp-validation-for="UserName" class="text-danger"></span>
        <input asp-for="UserName" class="form-control" />


    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input type="password" asp-for="Password" class="form-control" />

    </div>
    <div class="form-check">
        <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
        <label class="form-check-label" asp-for="RememberMe">  Beni Hatırla</label>
    </div>
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <input type="submit" class="btn btn-primary btn-sm" value="Giriş Yap" />
    <sma> Hesabınız yok mu? <a asp-action="SignUp" class="btn btn-link btn-sm">Kayıt Ol</a></sma>


</form>







