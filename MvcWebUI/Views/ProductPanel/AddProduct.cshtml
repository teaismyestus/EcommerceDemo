@model CategoryProductViewModel
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_Supplier.cshtml";
}

<h1>Ürün Ekle</h1>



<form method="post" asp-action="AddProduct" class="w-75 mx-auto p-3"enctype="multipart/form-data">

    <select id="CategoryList" asp-items="@ViewBag.Categories" asp-for="CategoryID">
        <option>Kategori Seçiniz.</option>
    </select>
    <input type="hidden" asp-for="SupplierID" />
    
    
    <div class=" form-group">


        <label asp-for="ProductName"></label>
        <span asp-validation-for="ProductName"></span>
        <input asp-for="ProductName" class="form-control" />
    </div>
    <div class=" form-group">


        <label asp-for="UnitPrice"></label>
        <span asp-validation-for="UnitPrice"></span>
        <input asp-for="UnitPrice" class="form-control" />
    </div>
    <div class=" form-group">


        <label asp-for="QuantityPerUnit"></label>
        <span asp-validation-for="QuantityPerUnit"></span>
        <input asp-for="QuantityPerUnit" class="form-control" />
    </div>
    <div class=" form-group">


        <label asp-for="UnitsInStock"></label>
        <span asp-validation-for="UnitsInStock"></span>
        <input asp-for="UnitsInStock" class="form-control" />
    </div>
    <div class=" form-group">


        <label>Resim Ekle</label>

        <input type="file" asp-for="@Model.Picture" />
    </div>


    <label asp-for="Description"></label>
    <span asp-validation-for="Description"></span>
    @Html.TextAreaFor(model => model.Description, new { @id="editor1",@name="editor1", @class ="form-control"})
   

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <button type="submit" class="btn btn-info btn-sm">Kaydet</button>
</form>