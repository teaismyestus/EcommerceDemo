@model IEnumerable<Entities.Concrete.Product>
@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Views/Shared/_Supplier.cshtml";
}




@if(Model.Count()>0)
{

    <table class="table table-bordered table-striped" style="width100%">

        <thead>
            <tr>

                <th>

                    Ürün İsmi


                </th>
                <th>Fiyat</th>
                <th>Stok</th>
                <th>İşlem</th>
                

            </tr>

            
        </thead>
        <tbody>
            @foreach(var product in Model)
            {
                <tr>
                    <td width="50%">@product.ProductName</td>
                    <td width="50%">@product.UnitPrice</td>
                    <td width="50%">@product.UnitsInStock</td>
                    <td><a asp-action="Update" asp-route-Id="@product.ProductID" asp-controller="ProductPanel" class="btn btn-sm btn-primary mx-2">Güncelle</a></td>
                    <td><a asp-action="Delete" asp-route-Id="@product.ProductID" asp-controller="ProductPanel" class="btn btn-sm btn-danger mx-2">Sil</a></td>

                </tr>


            }
            @if(Model.Count()<0)
            {
            <p>Herhangi bir ürün eklemediniz.</p>
            }


        </tbody>



    </table>


}


